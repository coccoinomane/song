    double delta_e_1=0, delta_e_2=0, xe=0, xe_dot=0;
    double delta_b_1 = pvec_sources1[ppt->index_qs_delta_b];
    double delta_b_2 = pvec_sources2[ppt->index_qs_delta_b];
