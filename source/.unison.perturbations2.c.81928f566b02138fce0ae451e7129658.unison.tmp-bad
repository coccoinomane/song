      delta_e_over_delta_b = 1. - 1/(3*Hc)*(xe_dot/xe);
    }
 
    delta_e_1 = delta_b_1 * delta_e_over_delta_b;
    delta_e_2 = delta_b_2 * delta_e_over_delta_b;     
 
  
 
